<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">

    <!-- Frame 1 -->
    <item android:duration="3000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0F2027"
                android:centerColor="#203A43"
                android:endColor="#2C5364"
                android:angle="45" />
        </shape>
    </item>

    <!-- Frame 2 -->
    <item android:duration="3000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A2980"
                android:centerColor="#26D0CE"
                android:endColor="#1A2980"
                android:angle="135" />
        </shape>
    </item>

    <!-- Frame 3 -->
    <item android:duration="3000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#000428"
                android:centerColor="#004E92"
                android:endColor="#000428"
                android:angle="225" />
        </shape>
    </item>

</animation-list>
